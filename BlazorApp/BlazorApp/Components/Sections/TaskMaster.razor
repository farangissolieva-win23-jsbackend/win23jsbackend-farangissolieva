<section class="taskmaster">
    <div class="container">
        <img src="images/TaskMaster-dashboard.svg" alt="taskMaster">
        <div class="content">
            <h2>Manage Your Work</h2>
            <ul class="checklist">
                @foreach (var checklist in ChecklistItems)
                {
                    <li><i class="fa-light fa-circle-check"></i>@checklist</li>
                }
            </ul>
            <div class="button">
                <a class="btn-theme-s" href="#">Learn more<i class="fa-light fa-arrow-right"></i></a>
            </div>

        </div>
    </div>
</section>

@code {
    List<string> ChecklistItems = new List<string>()
    {
        "Powerful project management",
        "Transparent work management",
        "Manage work & focus on the most important tasks",
        "Track your progress with interactive charts",
        "Easiest way to track time spent on tasks"
       
    };
}